/* components/Head/wx-head.wxss */
.user-info{
  position:absolute;
  z-index:2;
  top: 10rpx;
  width:100rpx;
  border-radius:100%; 
  overflow:hidden;
  height:100rpx;
  display:flex;
  left:50%;
  transform:translate(-50%,20rpx);
}
.user-avatar{
  width: 100rpx;
  height: 100rpx;
}
.edit-btn{
  position:absolute;
  width:100rpx;
  height:100rpx;
  border:1px solid #fff;
  display:flex;
  justify-content:center;
  top:24rpx;
  right:24rpx;
  border-radius: 100%;
  padding: 20rpx;
}
.edit-btn image{
  width:80rpx;
  height:80rpx;
}
.user-name{
  color: #fff;
  text-align: center;
  position:absolute;
  top:170rpx;
  transform:translate(50%);
}